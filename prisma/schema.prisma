generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model favoritedmovie {
  userId  String
  movieId String
  movie   movie  @relation(fields: [movieId], references: [id], map: "FavoritedMovie_movieId_fkey")
  user    user   @relation(fields: [userId], references: [id], map: "FavoritedMovie_userId_fkey")

  @@id([userId, movieId])
  @@index([movieId], map: "FavoritedMovie_movieId_fkey")
}

model movie {
  id             String           @id
  creatorId      String
  title          String
  synopsis       String
  rate           String
  poster         String
  createdAt      DateTime         @default(now())
  user           user             @relation(fields: [creatorId], references: [id], map: "Movie_creatorId_fkey")
  favoritedmovie favoritedmovie[]

  @@index([creatorId], map: "Movie_creatorId_fkey")
}

model user {
  id             String           @id
  name           String
  email          String
  password       String
  createdAt      DateTime         @default(now())
  favoritedmovie favoritedmovie[]
  movie          movie[]
}
